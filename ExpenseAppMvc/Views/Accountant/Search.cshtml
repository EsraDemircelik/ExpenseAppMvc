@using ExpenseAppMvc.Models
@model List<ExpenseForm>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/AccountantLayout.cshtml";
}

<h2>Search</h2>
<br />
@using (Html.BeginForm("Search", "Accountant", FormMethod.Get))
{
    <p>
        Description  @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Description</th>
        <th>Reason</th>
        <th>Create Date</th>
        <th>Currency </th>
        <th>Expense</th>
        <th>User </th>
        <th>Delete</th>
        <th>Update</th>
        <th>Detail</th>
    </tr>

    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Description</td>
            <td>@e.RejectReason</td>
            <td>@e.CreateDate</td>
            <td>@e.Currency.Code</td>
            @*<td>@e.CurrencyId</td>*@
            @*<td>@e.ExpenseStatusId</td>*@
            <td>@e.ExpenseStatus.Name</td>
            @*<td>@e.UserId</td>*@
            <td>@e.User.Name</td>
            <td>
                <a href="/ExpenseForm/ExpenseFormDelete/@e.Id" class="btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="/ExpenseForm/ExpenseFormUpdate/@e.Id" class="btn btn-success">Update</a>
            </td>
            <td>
                <a href="/ExpenseForm/ApprovalProcess/@e.Id" id="detail" class="btn btn-outline-primary">Onay</a>
            </td>

        </tr>
    }
</table>


